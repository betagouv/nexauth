{
  "name": "nexauth",
  "version": "1.4.1",
  "description": "A dead simple JWT-based authentication library for Next.js framework.",
  "license": "AGPL-3.0",
  "type": "module",
  "sideEffects": false,
  "bin": {
    "nexauth": "./dist/commands/index.js"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./AuthProvider": "./dist/AuthProvider/index.js",
    "./getUser": "./dist/libs/getUser.js",
    "./jwt": "./dist/libs/jwt.js",
    "./Nexauth": "./dist/Nexauth.js",
    "./PrismaAdapter": "./dist/adapters/PrismaAdapter.js",
    "./useAuth": "./dist/hooks/useAuth.js"
  },
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "AuthProvider": [
        "dist/AuthProvider/index.d.ts"
      ],
      "getUser": [
        "dist/libs/getUser.d.ts"
      ],
      "jwt": [
        "dist/libs/jwt.d.ts"
      ],
      "Nexauth": [
        "dist/Nexauth.d.ts"
      ],
      "PrismaAdapter": [
        "dist/adapters/PrismaAdapter.d.ts"
      ],
      "useAuth": [
        "dist/hooks/useAuth.d.ts"
      ]
    }
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "rm -Rf ./dist && tsc -p ./tsconfig.dist.json",
    "build:cli": "tsc -p ./tsconfig.dist.cli.json",
    "dev": "nodemon -e ts,tsx -w ./src -x \"yarn test:e2e:setup && cd ./examples/with-prisma && yarn build && yarn start\"",
    "dev:cli": "yarn build && node ./dist/commands/index.js",
    "dev:docs": "docsify serve ./docs",
    "prepare": "husky install",
    "test": "yarn test:lint && yarn test:build && yarn test:unit",
    "test:lint": "eslint --ext js,ts,tsx .",
    "test:e2e": "playwright test -c ./config/playwright.config.ts",
    "test:e2e:serve": "sh ./scripts/e2e/serve.sh",
    "test:e2e:setup": "yarn build && sh ./scripts/e2e/setup.sh",
    "test:type": "tsc",
    "test:unit": "jest --config=./config/jest.config.js",
    "test:unit:setup": "yarn dev:cli init",
    "test:unit:watch": "yarn test:unit --watch"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "bhala": "2.1.0",
    "clipboardy": "3.0.0",
    "cuid": "2.1.8",
    "jose": "4.3.7",
    "jwt-decode": "3.1.2",
    "ky": "0.28.7",
    "lodash.debounce": "4.0.8",
    "ramda": "0.27.1"
  },
  "devDependencies": {
    "@ivangabriele/commitlint-config": "1.0.2",
    "@ivangabriele/eslint-config-typescript-react": "2.1.4",
    "@ivangabriele/prettier-config": "2.0.2",
    "@ivangabriele/semantic-release-config-base": "2.0.2",
    "@playwright/test": "1.17.1",
    "@testing-library/react-hooks": "7.0.2",
    "@types/bcryptjs": "2.4.2",
    "@types/jest": "27.4.0",
    "@types/lodash.debounce": "4.0.6",
    "@types/node": "17.0.6",
    "@types/ramda": "0.27.62",
    "@types/react": "17.0.38",
    "codecov": "3.8.3",
    "dayjs": "1.10.7",
    "docsify-cli": "4.4.3",
    "dotenv": "10.0.0",
    "husky": "7.0.4",
    "jest": "27.4.5",
    "next": "12.0.9",
    "nodemon": "2.0.15",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "ts-jest": "27.1.2",
    "typescript": "4.5.4"
  },
  "peerDependencies": {
    "next": ">=12",
    "react": "",
    "react-dom": ""
  },
  "resolutions": {
    "marked": ">=2.0.0"
  },
  "prettier": "@ivangabriele/prettier-config",
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "extends": "@ivangabriele/semantic-release-config-base",
    "branches": [
      "v1"
    ]
  },
  "bugs": {
    "url": "https://github.com/betagouv/nexauth/issues"
  },
  "homepage": "https://github.com/betagouv/nexauth#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/betagouv/nexauth.git"
  }
}
